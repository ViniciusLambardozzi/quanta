li $0, 0
li $1, 1

li $2, 1 ; hex displays
li $3, 3 ; buttons
li $4, 3 ; switches

li $30, 31
.shiftAddress:
    lsl $2
    sub $30, $1
    jne $30, $0, shiftAddress

li $30, 30
.shiftInputAddress:
    lsl $3
    lsl $4
    sub $30, $1
    jne $30, $0, shiftInputAddress

or $4, $1

li $29, 14
.readInput:
    load $28, $3
    jne $28, $29, readInput

load $28, $4
store $28, $2
